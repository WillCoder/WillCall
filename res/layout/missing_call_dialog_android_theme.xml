<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_android_theme"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:paddingTop="6dp"
        android:text="@string/app_name"
        android:textColor="#33B5E5"
        android:textSize="26sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#33B5E5"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:src="@drawable/contact_icon_android_theme" />

            <TextView
                android:id="@+id/mcd_name_1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:text="@string/unknow_contact_name"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mcd_time"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="125â€"
            android:textColor="@android:color/white"
            android:textSize="56sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_recall_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/recall_poor_win_theme" />

        <TextView
            android:id="@+id/mcd_name_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="1999999999"
            android:textColor="@android:color/white"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/btn_to_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:background="@drawable/btn_normal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/page_left" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white" >
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/recall_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:text="Call back"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/btn_to_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:background="@drawable/btn_normal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white" >
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/page_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>