<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_to_left"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/page_left_win_theme"
        android:visibility="invisible" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
				<LinearLayout
				    android:id="@+id/block_view_1"
				    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/block_1">
                    <ImageView
                        android:id="@+id/default_contact_icon"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/contact_icon_win_theme" />
                    <TextView
                        android:layout_weight="0"
                        android:id="@+id/mcd_name_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:paddingLeft="6dp"
                        android:text="WillCall"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:background="#40000000" />
				</LinearLayout>
  
				<LinearLayout
				    android:id="@+id/block_view_2"
				    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/block_2">
                <TextView
                    android:id="@+id/mcd_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="125”"
                    android:textColor="@android:color/white"
                    android:textSize="38sp"
                    android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/block_view_3"
                android:layout_width="100dp"
                android:layout_height="204dp"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:background="@color/block_3"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:padding="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/call_contact_win_theme" />
                <ImageView
                    android:layout_weight="0"
                    android:id="@+id/btn_recall_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:scaleType="fitCenter"
                    android:src="@drawable/recall_good_win_theme" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/block_view_4"
            android:layout_width="204dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
			android:orientation="vertical"
			android:background="@color/block_4">
            <TextView
                android:id="@+id/mcd_name_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1008610086100861008610086100861008610086"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="26sp" />
<!--             <ImageView -->
<!--                 android:layout_width="34dp" -->
<!--                 android:layout_height="34dp" -->
<!-- 				android:paddingLeft="10dp" -->
<!-- 				android:paddingBottom="5dp" -->
<!--                 android:layout_gravity="center_vertical" -->
<!--                 android:layout_weight="0" -->
<!--                 android:scaleType="fitCenter" -->
<!--                 android:src="@drawable/missed_icon_win_theme" /> -->
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/btn_to_right"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/page_right_win_theme"
        android:visibility="invisible" />

</LinearLayout>